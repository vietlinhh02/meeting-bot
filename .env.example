# API Keys and Secrets
# Copy this file to .env and fill in your actual values

# OpenAI API Key (for AI features)
OPENAI_API_KEY=your_openai_api_key_here

# Speech-to-Text Service API Key
SPEECH_API_KEY=your_speech_api_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/meeting_bot

# Server Configuration
PORT=3000
NODE_ENV=development

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=7d
SESSION_SECRET=your_session_secret_here

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# BullMQ Queue Configuration
QUEUE_NAME=meeting-jobs
QUEUE_CONCURRENCY=5

# MinIO/S3 Storage Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=meeting-recordings
MINIO_REGION=us-east-1

# Storage Configuration
STORAGE_PATH=./storage
MAX_FILE_SIZE=104857600

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Cron Job Configuration
CLEANUP_CRON_SCHEDULE=0 2 * * *
RECORDING_RETENTION_DAYS=30

